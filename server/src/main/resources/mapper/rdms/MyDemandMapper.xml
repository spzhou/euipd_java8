<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.course.server.mapper.rdms.MyDemandMapper">
  <resultMap id="BaseResultMap" type="com.course.server.domain.RdmsDemand">
    <id column="id" jdbcType="CHAR" property="id" />
    <result column="customer_id" jdbcType="CHAR" property="customerId" />
    <result column="pre_project_id" jdbcType="CHAR" property="preProjectId" />
    <result column="product_manager_id" jdbcType="CHAR" property="productManagerId" />
    <result column="demand_name" jdbcType="VARCHAR" property="demandName" />
    <result column="demand_customer_name" jdbcType="VARCHAR" property="demandCustomerName" />
    <result column="confirm_person_name" jdbcType="VARCHAR" property="confirmPersonName" />
    <result column="confirm_contact_tel" jdbcType="VARCHAR" property="confirmContactTel" />
    <result column="demand_description" jdbcType="VARCHAR" property="demandDescription" />
    <result column="work_condition" jdbcType="VARCHAR" property="workCondition" />
    <result column="file_list_str" jdbcType="VARCHAR" property="fileListStr" />
    <result column="writer_id" jdbcType="CHAR" property="writerId" />
    <result column="next_node" jdbcType="CHAR" property="nextNode" />
    <result column="status" jdbcType="VARCHAR" property="status" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="submit_time" jdbcType="TIMESTAMP" property="submitTime" />
    <result column="deleted" jdbcType="INTEGER" property="deleted" />
  </resultMap>

  <sql id="Base_Column_List">
    id, customer_id, pre_project_id, product_manager_id, demand_name, demand_customer_name,
    confirm_person_name, confirm_contact_tel, demand_description, work_condition, file_list_str,
    writer_id, next_node, `status`, create_time, submit_time, deleted
  </sql>

  <select id="getDemandListByIdList" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from rdms_demand
    <where> 1=1 and deleted=0
      <if test="idList != null and idList != '' and idList != '[]'">
        and id in
        <foreach collection="idList" item="item" index="index"
                 open="(" separator="," close=")">#{item}
        </foreach>
      </if>
    </where>
    order by create_time desc
  </select>

</mapper>
