<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.course.server.mapper.rdms.MyCustomerResourceMapper">
  <resultMap id="BaseResultMap" type="com.course.server.domain.RdmsCustomerResource">
    <id column="id" jdbcType="CHAR" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="page" jdbcType="VARCHAR" property="page" />
    <result column="request" jdbcType="VARCHAR" property="request" />
    <result column="parent" jdbcType="CHAR" property="parent" />
  </resultMap>

  <select id="getCustomerResourceList" parameterType="java.lang.String" resultMap="BaseResultMap">
    select *
    from rdms_customer_resource
    <where> 1=1
      <if test="resourceIds != null and resourceIds !=''">
        and id in
        <foreach collection="resourceIds" item="item" index="index"
                 open="(" separator="," close=")">#{item}
        </foreach>
      </if>
    </where>
    order by id asc
  </select>

</mapper>
